package Ruben.Tema4.Ejercicios15Enero;

import java.util.Arrays;
import java.util.Random;

public class Ejercicio7Pruebas {

	public static void main(String[] args) {

		final int TOTAL_ELEMENTOS = 50;
		int [] arrayAleatorio = new int [TOTAL_ELEMENTOS];
		int [] numerosFaltantes = new int [100];
		boolean pasar = false;
		int contador = 1;
		int posicion = 0;
		Random random = new Random();
		
		for (int i = 0; i < arrayAleatorio.length; i++) {
			arrayAleatorio[i] = random.nextInt(100)+1;	
		}
		
		for (int num : arrayAleatorio) {
			System.out.println(arrayAleatorio[num]);
		}
		Arrays.sort(arrayAleatorio);
		System.out.println(" ");
		
		for (int i = 0; i < numerosFaltantes.length; i++) {
			for (int j = 0; j < arrayAleatorio.length; j++) {
				if (contador==arrayAleatorio[j]) {
					pasar = true;
				}
			}
			if (pasar==false) {
				//System.out.print(contador + " | ");
				numerosFaltantes[posicion] = contador;
				posicion++;
			}
			else {
				pasar=false;
			}
			
			contador++;
		}
		
		
		
		for (int i = 0; i < numerosFaltantes.length-1; i++) {
			if (numerosFaltantes[i]!=0) {
				System.out.print(numerosFaltantes[i] + " | ");
			}
		}

	}

}
